---
import { SITE, SKILLSSHOWCASE_CONFIG, SOCIAL_LINKS } from '~/config.ts'
import { GITHUB_CONFIG, POSTS_CONFIG } from '~/config.ts'
const base = SITE.base
import Layout from '~/layouts/Layout.astro'
import SectionDivider from '~/components/base/SectionDivider.astro'
import GithubContributions from '~/components/base/GithubContributions.tsx'
import SocialLink from '~/components/base/SocialLink.astro'
import List from '~/components/posts/card/List.astro'
import SkillsShowcase from '~/components/base/SkillsShowcase.astro'
import { getNumPosts, getPinnedPosts } from '~/lib/data'
import { Image } from 'astro:assets'
import logo from '../../public/logo.png'

const { ENABLED, GITHUB_USERNAME, TOOLTIP_ENABLED } = GITHUB_CONFIG
const { size, type } = POSTS_CONFIG.homePageConfig
const { SKILLS_ENABLED, SKILLS_DATA } = SKILLSSHOWCASE_CONFIG

let showPosts = []
const pinnedPosts = await getPinnedPosts()
const hasPinnedPosts = pinnedPosts.length > 0
if (hasPinnedPosts) {
  showPosts = pinnedPosts
} else {
  showPosts = await getNumPosts(size)
}

// Category definitions with descriptions
const categories = [
  {
    name: 'Signals',
    slug: 'signals',
    icon: 'icon-[mdi--broadcast]',
    description: 'New features, releases, and capability changes',
    primary: true
  },
  {
    name: 'Deep Dives',
    slug: 'deep-dives',
    icon: 'icon-[mdi--microscope]',
    description: 'Technical breakdowns of how things actually work'
  },
  {
    name: 'Workflows',
    slug: 'workflows',
    icon: 'icon-[mdi--workflow]',
    description: 'Real usage patterns and practical setups'
  },
  {
    name: 'Guides',
    slug: 'guides',
    icon: 'icon-[mdi--book-open-page-variant]',
    description: 'Step-by-step tutorials and how-tos'
  },
  {
    name: 'Rumors',
    slug: 'rumors',
    icon: 'icon-[mdi--crystal-ball]',
    description: 'Careful, analytical speculation on direction'
  },
  {
    name: 'Changelog',
    slug: 'changelog',
    icon: 'icon-[mdi--history]',
    description: 'Capability evolution tracked over time'
  }
]
---

<Layout title="Home" description={SITE.description}>
  <div class="relative z-[1]">
    <div class="fade-up">
      <div class="py-8 pb-10 px-6 sm:px-8 relative">
        <!-- Large background logo -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none overflow-hidden">
          <Image
            src={logo}
            width={500}
            height={500}
            alt=""
            class="w-[400px] h-[400px] sm:w-[500px] sm:h-[500px] opacity-[0.07] dark:opacity-[0.12] blur-[1px]"
            densities={[1, 2]}
          />
        </div>

        <!-- Hero content -->
        <div class="relative z-10">
          <h1 class="flex flex-col gap-4 mb-6">
            <span class="text-4xl sm:text-5xl tracking-tight bg-gradient-to-r from-primary to-purple-400 bg-clip-text text-transparent font-bold">
              Claude Signal
            </span>
            <span class="text-muted-foreground font-light text-xl sm:text-2xl block tracking-wide text-balance">
              Tracking real capability, workflows, and what's coming next.
            </span>
          </h1>

          <div class="text-muted-foreground text-pretty max-w-none">
            <p class="text-base leading-relaxed">
              Your independent source for Claude AI coverage. We dig into the details that matter: new features,
              real-world workflows, technical deep dives, and careful analysis of where things are headed.
            </p>
          </div>
        </div>

        <!-- Category Cards -->
        <div class="mt-10 relative z-10">
          <h2 class="text-lg font-medium text-foreground mb-4">Explore by Category</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
            {categories.map((cat) => (
              <a
                href={`${base}/tags/${cat.slug}`}
                class={`group p-4 rounded-xl border transition-all duration-200 hover:scale-[1.02] backdrop-blur-sm ${
                  cat.primary
                    ? 'bg-gradient-to-br from-primary/15 to-purple-500/10 border-primary/30 hover:border-primary/50'
                    : 'bg-accent/50 border-border/50 hover:border-primary/30 hover:bg-accent'
                }`}
              >
                <div class="flex items-start gap-3">
                  <span class={`${cat.icon} size-6 ${cat.primary ? 'text-primary' : 'text-muted-foreground group-hover:text-primary'} transition-colors flex-shrink-0 mt-0.5`}></span>
                  <div>
                    <div class={`font-semibold ${cat.primary ? 'text-primary' : 'text-foreground'}`}>{cat.name}</div>
                    <div class="text-sm text-muted-foreground mt-1">{cat.description}</div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <div class="mt-8 flex gap-6 relative z-10">
          {
            SOCIAL_LINKS.map((item) => {
              return (
                <SocialLink href={item.url} icon={item.icon} aria-label={`Link of ${item.name}`} count={item.count} label="followers" />
              )
            })
          }
        </div>
      </div>
      {/* GitHub contributions disabled for blog */}
      {
        SKILLS_ENABLED && SKILLS_DATA.length > 0 && (
          <>
            <SectionDivider />
            <div class="py-8 pb-10 px-6 max-md:px-6">
              <div class="px-2 max-md:px-0">
                <h2 class="text-2xl sm:text-3xl tracking-tight">Skills</h2>
                <p class="text-muted-foreground mb-6 mt-1">Here are some skills I have used:</p>
              </div>
              <SkillsShowcase skillsData={SKILLS_DATA} />
            </div>
          </>
        )
      }
      {showPosts.length > 0 && (
        <>
          <SectionDivider />
          <div class="py-8 pb-10 px-6 sm:px-8">
            <h2 class="text-2xl sm:text-3xl tracking-tight">Latest</h2>
            <p class="text-muted-foreground mb-6 mt-1">
              {hasPinnedPosts ? `Featured` : 'Recent'} posts
            </p>
            <List posts={showPosts} {type} coverLayout={POSTS_CONFIG.homePageConfig?.coverLayout} />
          </div>
        </>
      )}
      {showPosts.length === 0 && (
        <>
          <SectionDivider />
          <div class="py-8 pb-10 px-6 sm:px-8">
            <h2 class="text-2xl sm:text-3xl tracking-tight">Coming Soon</h2>
            <p class="text-muted-foreground mt-1">
              Content is on the way. Check back soon for signals, deep dives, and guides.
            </p>
          </div>
        </>
      )}
    </div>
  </div>
</Layout>
